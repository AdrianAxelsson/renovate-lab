{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard"
  ],
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^azurerm"],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": ["major"],
      "groupName": "azurerm major",
      "groupSlug": "azurerm-major",
      "additionalBranchPrefix": "{{packageFile}}-"
    }
  ]
}

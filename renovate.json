{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard"
  ],
  "separateMultipleMajor": true,
  "separateMajorMinor": true,
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^azurerm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "azurerm non-major dependencies"
    }
  ]
}
